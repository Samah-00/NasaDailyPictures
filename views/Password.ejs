<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')%>

<body>
<div class="container medium">
    <%- include('./partials/logo.ejs')%>
    <h3 class="text-center">Please choose a password</h3>
    <h5 class="text-center">Register</h5>

    <% if(matched)
    { %>
    <div class="text-center">
        <small class="text-danger"> Password not matched! </small>
    </div>
   <% }%>

    <div id="password-form">
        <form action="/Password" method="post" id="passwordForm" class="displayed">
            <div class="form-group">
                <!--Password 1-->
                <label id="password1Lebel" for="password1Box" style="text-align: left;">Password</label><br>
                <input type="password" class="form-control" maxlength="32" name="password1Box" id="password1Box" required placeholder="Password"><br>
                <!--Password 2-->
                <label id="password2Lebel" for="password2Box" style="text-align: left;">Confirm Password</label><br>
                <input type="password" class="form-control" maxlength="32" name="password2Box" id="password2Box" required placeholder="Confirm Password"><br>
                <!--Button-->
                <div style="text-align: center;">
                    <button type="button" class="btn btn-dark" id="backBtn" >Back</button>
                    <button class="btn btn-dark" type="submit" id="registerBtn">Register</button><br>
                    <small id="alreadyRegistered" class="form-text text-muted">Already Registered? go to <a href="/">Login</a> page</small>
                </div>
            </div>
        </form>
    </div>

</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

<script defer type="module" src="javascripts/password.js"> </script>

</body>
</html>
