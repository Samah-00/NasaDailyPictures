<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')%>

<body>
<div class="container medium">
    <%- include('./partials/logo.ejs')%>
    <h3 class="text-center">Please Register</h3>
    <h5 class="text-center">Register</h5>
    <% if(emailUsed)
    { %>
        <div class="text-center">
            <small class="text-danger"> Email is used! Please choose another Email. </small>
        </div>
    <% }%>
    <% if(timeOut)
    { %>
        <div class="text-center">
            <small class="text-danger"> Time Out! Please register again. </small>
        </div>
    <% }%>

    <div id="register-form">
        <form action="/Password" method="get" id="registerForm" class="displayed">
            <div class="form-group">
                <!--Email-->
                <label id="emailLebel" for="emailBox">Email address</label><br>
                <input type="email" class="form-control" maxlength="32" name="emailBox" id="emailBox" required placeholder="Email"><br>
                <!--First Name-->
                <label id="nameLebel" for="nameBox">First Name</label><br>
                <input type="text" class="form-control" pattern="^[a-zA-Z]{3,32}$" name="nameBox" id="nameBox" required placeholder="First Name"><br>
                <!--Last Name-->
                <label id="LastNameLabel" for="LastNameBox">Last Name</label><br>
                <input type="text" class="form-control" pattern="^[a-zA-Z]*$" maxlength="32" name="LastNameBox" id="LastNameBox" required placeholder="Last Name"><br>
                <button class="btn form-control center-button btn-dark" type="submit" id="nextBtn" >Next</button><br>
                <div style="text-align: center;">
                    <small id="already Regestered" class="form-text text-muted" >Already Registered? go to <a href="/">Login</a> page</small>
                </div>
            </div>
        </form>

    </div>

</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

<script defer type="module" src="javascripts/script.js"> </script>

</body>
</html>
